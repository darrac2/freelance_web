<script>
        // GSAP Animations
        gsap.registerPlugin(ScrollTrigger);
        
        // Animation d'entrée de la card
        gsap.from("#projectCard", {
            duration: 1,
            y: 100,
            opacity: 0,
            ease: "back.out(1.7)",
            delay: 0.2
        });
        
        // Ouverture du modal
        document.getElementById('projectCard').addEventListener('click', function() {
            const modal = document.getElementById('projectModal');
            const modalContent = document.getElementById('modalContent');
            
            // Animation d'ouverture du modal avec GSAP
            gsap.set(modal, { display: 'flex' });
            gsap.to(modal, {
                duration: 0.3,
                opacity: 1,
                visibility: 'visible',
                ease: "power2.out"
            });
            
            gsap.to(modalContent, {
                duration: 0.5,
                scale: 1,
                ease: "back.out(1.7)",
                delay: 0.1
            });
            
            document.body.style.overflow = 'hidden';
        });
        
        // Fermeture du modal
        function closeModal() {
            const modal = document.getElementById('projectModal');
            const modalContent = document.getElementById('modalContent');
            
            gsap.to(modalContent, {
                duration: 0.3,
                scale: 0.75,
                ease: "power2.in"
            });
            
            gsap.to(modal, {
                duration: 0.3,
                opacity: 0,
                ease: "power2.in",
                onComplete: function() {
                    gsap.set(modal, { display: 'none', visibility: 'hidden' });
                }
            });
            
            document.body.style.overflow = 'auto';
        }
        
        // Event listeners pour fermer le modal
        document.getElementById('closeModal').addEventListener('click', closeModal);
        
        document.getElementById('projectModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeModal();
            }
        });
        
        // Fermer avec Escape
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeModal();
            }
        });
        
        // Animation des liens au hover avec GSAP
        const projectLinks = document.querySelectorAll('a[href="#"]');
        projectLinks.forEach(link => {
            link.addEventListener('mouseenter', function() {
                gsap.to(this, {
                    duration: 0.3,
                    y: -5,
                    boxShadow: "0 10px 25px rgba(102, 126, 234, 0.4)",
                    ease: "power2.out"
                });
            });
            
            link.addEventListener('mouseleave', function() {
                gsap.to(this, {
                    duration: 0.3,
                    y: 0,
                    boxShadow: "0 4px 6px rgba(0, 0, 0, 0.1)",
                    ease: "power2.out"
                });
            });
        });
        
        // Animation des tags technologiques
        gsap.from(".gradient-bg span", {
            duration: 0.8,
            y: 20,
            opacity: 0,
            stagger: 0.1,
            ease: "back.out(1.7)",
            scrollTrigger: {
                trigger: ".gradient-bg span",
                start: "top 80%"
            }
        });
    </script>
